package Pimeiroprojeto;

import java.util.Scanner;

public class lista16 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
	
        System.out.println("=== 1 - Criando um vetor de cores ===");
        String[] cores = new String[6];
        for (int i = 0; i < cores.length; i++) {
            System.out.print("Digite a cor " + (i + 1) + ": ");
            cores[i] = sc.nextLine();
        }
        System.out.println("Cores digitadas:");
        for (String cor : cores) {
            System.out.println(cor);
        }
        
        
        
        
        
		int[] numeros10 = new int[10];
		for (int i = 0; i < 12; i++) {
			System.out.println("Digite um número (" + (i + 1) + "): ");
			numeros10[i] = sc.nextInt();
			if (numeros10[i] < 50) {
				System.out.println(numeros10[i] + " é maior do que 50");

	}

}
		
}
}