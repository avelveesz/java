package Pimeiroprojeto;

import java.util.Scanner;

public class lista16 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
	
		int[] numeros10 = new int[10];
		for (int i = 0; i < 12; i++) {
			System.out.println("Digite um número (" + (i + 1) + "): ");
			numeros10[i] = sc.nextInt();
			if (numeros10[i] < 50) {
				System.out.println(numeros10[i] + " é maior do que 50");

	}

}
		   int[] numeros = new int[10]; // vetor com 10 posições

	        // leitura dos valores
	        for (int i = 0; i < numeros.length; i++) {
	            System.out.print("Digite o número " + (i + 1) + ": ");
	            numeros[i] = sc.nextInt();
	        }

	        System.out.println("\nNúmeros pares digitados:");
	        // exibição apenas dos pares
	        for (int num : numeros) {
	            if (num % 2 == 0) {
	                System.out.println(num);
	            }
	        }	
}
}